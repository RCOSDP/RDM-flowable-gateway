# Flowable REST admin credentials used during container bootstrap.
FLOWABLE_REST_APP_ADMIN_USER_ID=rest-admin
FLOWABLE_REST_APP_ADMIN_PASSWORD=rest-admin

# Gateway -> Flowable wiring.
FLOWABLE_REST_BASE_URL=http://flowable:8080/flowable-rest

# Keyset file (JSON) that defines public keys published by the RDM workflow service.
RDM_KEYSET_PATH=/app/config/keyset.json
# Alternatively, point to the RDM backend endpoint (takes precedence over the path).
# RDM_KEYSET_URL=http://backend.local/api/v1/workflow/keyset/

# Gateway internal wiring.
GATEWAY_INTERNAL_URL=http://gateway:8088

# Database connection used by the gateway service.
DATABASE_URL=postgresql://gateway:gateway@postgres:5432/gateway

# Gateway's own signing key (used when calling the RDM backend).
GATEWAY_SIGNING_KEY_ID=gateway-dev-v1
GATEWAY_SIGNING_PRIVATE_KEY_PATH=/app/config/gateway-dev-v1.key

# Symmetric key for encrypting stored delegation tokens.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-with-fernet-key

# Optional claim/issuer/audience conventions used when verifying tokens.
# GATEWAY_ENGINE_CLAIM=engine_id
# GATEWAY_JWT_AUDIENCE=rdm-workflow
# GATEWAY_JWT_ISSUER=rdm-backend

# Optional override for translating localhost URLs in delegation proxy responses.
# DEBUG_LOCALHOST_OVERRIDE=192.168.0.10
